/*
	Word processor commands
*/

#define UNKNOWN -1
#define	BP 1		/* begin page */
#define	BR 2		/* break */
#define	CE 3		/* center */
#define	FI 4		/* fill */
#define	FO 5		/* footer title */
#define	HE 6		/* header title */
#define	IN 7		/* indent */
#define	LS 8		/* line spacing */
#define	NF 9		/* no fill */
#define	PL 10		/* page length */
#define	RM 11		/* right margin */
#define	SP 12		/* space by lines */
#define	TI 13		/* temporary indent */
#define	UL 14		/* underline */


/*
	array dimensions
*/
#define MAXLINE 200	/* title buffer size */
#define INSIZE 200	/* input buffer size */
#define MAXOUT 200	/* output buffer size */
#define PAGELEN 66	/* default page length */
#define PAGEWIDTH 60	/* default page width */

/*
	convienence definitions
*/


#define HUGE 2000
#define NOFILE -1
#define EOFF -1
#define YES 1
#define NO 0
#define COMMAND '.'


