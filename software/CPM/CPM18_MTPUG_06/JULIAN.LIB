

function julian(dd,mm,yyyy: integer): integer;
var jm,jy: integer;
begin
  case mm of
    1,2	: begin
		jy:=yyyy-1;
		jm:=mm+13
	  end
    else
	  begin
	  	jy:=yyyy;
		jm:=mm
	  end;
  julian:=trunc(365.25*jy)+trunc(30.6001*jm)+dd+1720982
end;	{ julian }

